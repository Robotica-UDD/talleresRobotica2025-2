//IMPORTANTE 
//CONECTAR TX A D10 Y RX A T11, ALIMENTACION DIRECTA A 5V Y GND 

#include <SoftwareSerial.h>

// Conecta HC-06: TX -> pin 10 (RX del Arduino en SoftwareSerial)
//                RX -> pin 11 (TX del Arduino en SoftwareSerial) con divisor de voltaje
SoftwareSerial BT1(10, 11);

void setup() {
  Serial.begin(9600);   // Monitor Serie (USB). NO usa pines 0/1 para BT
  BT1.begin(9600);      // HC-06 t√≠pico a 9600
  Serial.println(F("Puente PC <-> HC-06 listo (SS @ 9600)"));
}

void loop() {
  if (BT1.available()) Serial.write(BT1.read());
  if (Serial.available()) BT1.write(Serial.read());
}
